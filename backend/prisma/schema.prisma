// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  name        String
  password    String
  phoneNumber String   @unique
  email       String   @unique
  role        Role     @default(USER)
  confrmed    Boolean  @default(false)
  avatar      Picture? @relation(fields: [avatarId], references: [id])
  avatarId    Int?

  @@map("users")
}

model Picture {
  id   Int    @id @default(autoincrement())
  url  String @unique
  User User[]

  @@map("pictures")
}

model ConfirmationCodes {
  id        Int                  @id @default(autoincrement())
  type      ConfirmationCodeType
  code      String
  createdAt DateTime             @default(now())
  expiresAt DateTime

  @@map("confirmation_codes")
}

model Region {
  id       Int      @id @default(autoincrement())
  name     String
  parentId Int?
  parent   Region?  @relation("RegionChildren", fields: [parentId], references: [id])
  children Region[] @relation("RegionChildren")

  @@map("regions")
}

model Category {
  id       Int        @id @default(autoincrement())
  name     String
  parentId Int?
  parent   Category?  @relation("CategoryChildren", fields: [parentId], references: [id])
  children Category[] @relation("CategoryChildren")

  @@map("categories")
}

enum Role {
  USER
  ADMIN
}

enum ConfirmationCodeType {
  REGISTRATION
  RECOVERING
}
